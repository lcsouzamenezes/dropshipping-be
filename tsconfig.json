{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2018.Promise"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@config/*": ["./src/config/*"],
      "@shared/*": ["./src/shared/*"],
      "@errors/*": ["./src/shared/errors/*"],
      "@utils/*": ["./src/utils/*"],
      "@libs/*": ["./src/shared/libs/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
